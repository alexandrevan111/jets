#!/bin/bash

set -e

# Figure out where this script is located.
PROJECTDIR="`dirname \"$0\"`"
PROJECTDIR="`cd \"$PROJECTDIR/..\" && pwd`"

unset BUNDLE_IGNORE_CONFIG
# When jets packages the app code it creates .bundle/config in the project root.
# We want that to be used.

# Run the actual app using the bundled Ruby interpreter, with Bundler activated.
os=$(uname)
if [[ "$os" == 'Darwin' ]]; then
  # macosx ruby for development
  exec jets "$@"
else

  # Total hack - there must be a better way to bundle up openssl and install it correctly.
  # I've bundled the shared libraries like openssl into bundled/ruby/lib64
  export LD_LIBRARY_PATH=$PROJECTDIR/bundled/ruby/lib64:$LD_LIBRARY_PATH

  # bundled ruby for Lambda
  exec "$PROJECTDIR/bundled/ruby/bin/ruby" -rbundler/setup "$PROJECTDIR/bundled/gems/ruby/2.2.0/bin/jets" "$@"
fi
